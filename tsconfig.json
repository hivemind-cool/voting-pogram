{
  "compilerOptions": {
    "types": ["node", "mocha", "chai"],
    "typeRoots": ["./node_modules/@types"],
    "lib": ["es2015"],
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist",
    "baseUrl": "./app/src",
    "paths": {
      "*": ["*", "node_modules/*"]
    }
  },
  "include": ["app/src/**/*"],
  "exclude": ["node_modules", "dist"]
}